<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="150dp"></LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="0.1dp"
        android:layout_margin="10dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:padding="10dp">

            <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top">


                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/avatar"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/avatar_error"
                        android:elevation="1dp"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:padding="10dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/nom"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Nom du Job"
                                android:textColor="@color/black"
                                android:textSize="15dp"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/number"
                                android:textSize="10dp"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="848484848"/>
                            <TextView
                                android:id="@+id/AGE"
                                android:textSize="10dp"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:textStyle="italic"
                                android:layout_height="wrap_content"
                                android:text="23 ans"/>


                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>



            </LinearLayout>
            <LinearLayout
                android:background="#C9C9C9"
                android:elevation="1dp"
                android:layout_marginTop="0dp"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"/>

            <RatingBar
                android:layout_marginTop="5dp"
                android:rating="4.5"
                android:layout_gravity="center"
                android:saveEnabled="false"
                android:id="@+id/MyRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A propos du jobeur"/>
            <TextView
                android:textStyle="bold"
                android:fontFamily="@font/alegreya_sans_thin"
                android:id="@+id/S_descriptions"
                android:layout_weight="1"
                android:textSize="13dp"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aucune description sur le jobeur"/>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:background="@color/colorAccent"
                    android:padding="10dp"
                    android:text="10 rÃ©alisation (s)"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="13dp"/>
            </LinearLayout>

            <LinearLayout
                android:background="#C9C9C9"
                android:elevation="0.1dp"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"/>


        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
