<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:paddingBottom="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:padding="15dp"
                android:gravity="start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Changement de mot de passe"
                android:background="@color/colorAccent"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    android:layout_margin="10dp"
                    app:cardElevation="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:drawableRight="@drawable/ic_passeword_gray"
                        android:background="@color/white"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:id="@+id/old"
                        android:padding="15dp"
                        android:inputType="textPassword"
                        android:textSize="17dp"
                        android:hint="Mot de passe actuel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_margin="10dp"
                    app:cardElevation="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:drawableRight="@drawable/ic_passeword_gray"
                        android:background="@color/white"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:id="@+id/newP"
                        android:padding="15dp"
                        android:inputType="textPassword"
                        android:textSize="17dp"
                        android:hint="Nouveau mot de passe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_margin="10dp"
                    app:cardElevation="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:drawableRight="@drawable/ic_passeword_gray"
                        android:background="@color/white"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:id="@+id/CnewP"
                        android:padding="15dp"
                        android:inputType="textPassword"
                        android:textSize="17dp"
                        android:hint="Nouveau mot de passe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </android.support.v7.widget.CardView>


                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="15dp"
                    android:padding="10dp"
                    android:elevation="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/submit"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:background="@drawable/corner_blue_border_white"
                        android:textSize="15dp"
                        android:gravity="center"
                        android:text="Mettre Ã  jour"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/cancel"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:background="@drawable/corner_red_border_white"
                        android:textSize="15dp"
                        android:gravity="center"
                        android:text="Annuler"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>
