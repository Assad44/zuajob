<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/element"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/periode_layout"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/periode"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold"
            android:fontFamily="@font/alegreya_sans_thin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aujourd'hui"/>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"/>

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        android:layout_margin="10dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/view"
                    android:layout_weight="1"
                    android:background="@color/dark6"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:drawableLeft="@drawable/ic_voire_white"
                    android:textSize="15dp"/>
                <TextView
                    android:id="@+id/call"
                    android:layout_weight="1"
                    android:background="@color/dark3"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:drawableLeft="@drawable/ic_call_white"
                    android:textSize="15dp"/>

            </LinearLayout>

            <cd.maichapayteam.zuajob.Tools.RoundedImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/avatar"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:src="@drawable/avatar"
                android:elevation="1dp"/>

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:background="@color/colorPrimary"
                android:layout_width="0.1dp"
                android:layout_height="50dp"/>

            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:padding="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/nom"
                        android:textColor="@color/black"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/alegreya_sans_thin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Il ya une 1 heure"/>
                    <TextView
                        android:id="@+id/time"
                        android:textColor="@color/black"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/alegreya_sans_thin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Il ya une 1 heure"/>

                    <TextView
                        android:fontFamily="@font/alegreya_sans_thin"
                        android:id="@+id/categorie"
                        android:layout_marginBottom="-5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Informatique"
                        android:textSize="13dp"
                        android:textStyle="bold" />
                    <TextView
                        android:fontFamily="@font/alegreya_sans_thin"
                        android:id="@+id/Scategorie"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Informatique"
                        android:textColor="@color/colorAccent"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:padding="10dp"
                android:gravity="end|center_vertical"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/more"
                    android:src="@drawable/ic_morevv_primary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>