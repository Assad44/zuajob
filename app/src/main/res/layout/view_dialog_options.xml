<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/zxing_transparent"
    android:orientation="vertical">

  <LinearLayout
      android:padding="10dp"
      android:layout_margin="10dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_vertical"
      android:orientation="vertical">

    <ImageView
        android:id="@+id/close"
        android:layout_marginBottom="-20dp"
        android:layout_gravity="end"
        android:src="@mipmap/ic_close"
        android:layout_width="30dp"
        android:layout_height="30dp"/>

    <TextView
        android:id="@+id/cours"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="15dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alegreya_sans_thin"
        android:text="Comment avez-vous trouvé la prestation de ce jobeur ? "
        android:textSize="20dp"/>

    <LinearLayout
        android:background="#CFCFCF"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <TextView
        android:fontFamily="@font/alegreya_sans_thin"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/excellent"
        android:layout_height="wrap_content"
        android:text="Excelent"
        android:textSize="20dp"/>
    <TextView
        android:fontFamily="@font/alegreya_sans_thin"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/bon"
        android:layout_height="wrap_content"
        android:text="Bon"
        android:textSize="20dp"/>
    <TextView
        android:fontFamily="@font/alegreya_sans_thin"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/assezbon"
        android:layout_height="wrap_content"
        android:text="Assez bon"
        android:textSize="20dp"/>
    <TextView
        android:fontFamily="@font/alegreya_sans_thin"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/Mauvais"
        android:layout_height="wrap_content"
        android:text="Mauvais"
        android:textSize="20dp"/>
    <TextView
        android:fontFamily="@font/alegreya_sans_thin"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/Mediocre"
        android:layout_height="wrap_content"
        android:text="Médiocre"
        android:textSize="20dp"/>


  </LinearLayout>

</LinearLayout>
