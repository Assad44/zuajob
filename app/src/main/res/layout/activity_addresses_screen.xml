<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/back2"
    tools:context=".Front_end.Signup.Addresses_screen">

    <ImageView
        android:layout_marginStart="10dp"
        android:id="@+id/btn_back_arrow"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_back_primery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/autre_info"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="25dp"
                android:layout_marginBottom="20dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="300dp"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">

                    <EditText
                        android:singleLine="true"
                        android:fontFamily="@font/alegreya_sans_thin"
                        android:layout_marginBottom="10dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:id="@+id/street"
                        android:paddingLeft="15dp"
                        android:textSize="17dp"
                        android:hint="NÂ° et Avenue"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">

                    <EditText
                        android:singleLine="true"
                        android:fontFamily="@font/alegreya_sans_thin"
                        android:layout_marginBottom="10dp"
                        android:textStyle="bold"
                        android:id="@+id/quartier"
                        android:paddingLeft="15dp"
                        android:textSize="17dp"
                        android:hint="Quartier"
                        android:textColor="@color/black"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">

                    <EditText
                        android:singleLine="true"
                        android:fontFamily="@font/alegreya_sans_thin"
                        android:layout_marginBottom="10dp"
                        android:textStyle="bold"
                        android:id="@+id/commune"
                        android:paddingLeft="15dp"
                        android:textSize="17dp"
                        android:hint="Commune"
                        android:textColor="@color/black"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">

                    <EditText
                        android:singleLine="true"
                        android:fontFamily="@font/alegreya_sans_thin"
                        android:layout_marginBottom="10dp"
                        android:textStyle="bold"
                        android:id="@+id/email"
                        android:paddingLeft="15dp"
                        android:textSize="17dp"
                        android:hint="Email"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/black"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">

                    <EditText
                        android:fontFamily="@font/alegreya_sans_thin"
                        android:gravity="top"
                        android:singleLine="false"
                        android:layout_marginBottom="10dp"
                        android:textStyle="bold"
                        android:id="@+id/about_U"
                        android:paddingLeft="15dp"
                        android:textSize="17dp"
                        android:hint="A propo de vous"
                        android:textColor="@color/black"

                        android:layout_width="match_parent"
                        android:layout_height="150dp" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>


            <TextView
                android:id="@+id/btn_next"
                android:layout_margin="5dp"
                android:gravity="center"
                android:padding="15dp"
                android:background="@drawable/corner_primary_border_white"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:text="@string/confirmer"
                android:textColor="@color/white"
                android:textSize="17dp" />


        </LinearLayout>

    </ScrollView>


</LinearLayout>