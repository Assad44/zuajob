<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="150dp"></LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="0.1dp"
        android:layout_margin="10dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:padding="10dp">

            <LinearLayout
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/share"
                        android:layout_weight="1"
                        android:background="@color/dark6"
                        android:padding="10dp"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:drawableLeft="@drawable/ic_share_white"
                        android:textSize="15dp"/>
                    <TextView
                        android:id="@+id/comment"
                        android:layout_weight="1"
                        android:background="@color/dark3"
                        android:padding="10dp"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:drawableLeft="@drawable/ic_comment_white"
                        android:textSize="15dp"/>

                </LinearLayout>

                <LinearLayout
                    android:paddingRight="35dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <cd.maichapayteam.zuajob.Tools.RoundedImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/avatar"
                        android:layout_marginLeft="5dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/avatar"
                        android:elevation="1dp"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:padding="10dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/nom_user"
                                android:textColor="@color/black"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Nom du Job"/>
                            <TextView
                                android:id="@+id/number"
                                android:textSize="10dp"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Nom du Jobeur"/>


                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>



            </LinearLayout>
            <LinearLayout
                android:background="#C9C9C9"
                android:elevation="1dp"
                android:layout_marginTop="0dp"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"/>

            <TextView
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A propos de l'annonces"/>
            <TextView
                android:id="@+id/description"
                android:layout_weight="1"
                android:textSize="13dp"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Lorems"/>

            <TextView
                android:id="@+id/time"
                android:textColor="@color/colorAccent"
                android:textSize="15dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A l'instant"/>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:background="@color/dark8"
                    android:padding="10dp"
                    android:text="Prix du services"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="13dp"/>
                <TextView
                    android:id="@+id/S_prix"
                    android:layout_weight="1"
                    android:background="@color/dark3"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:text="50 USD"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="15dp"/>

            </LinearLayout>

            <LinearLayout
                android:background="#C9C9C9"
                android:elevation="0.1dp"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"/>


        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
