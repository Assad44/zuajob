<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="160dp"
    android:id="@+id/element"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/white"
        android:elevation="10dp">

        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <cd.maichapayteam.zuajob.Tools.RoundedImageView
                android:id="@+id/avatar"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:src="@drawable/avatar"/>

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="50dp"
                android:layout_height="1dp"
                android:layout_marginBottom="1dp"
                android:background="#66A8A8A8"/>

            <TextView
                android:id="@+id/nom_user"
                android:textColor="@color/dark8"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nom du jobeur"
                android:textSize="15dp"/>

            <TextView
                android:visibility="gone"
                android:id="@+id/number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="+243 814511083 "
                android:textColor="@color/black"
                android:textSize="11dp"
                android:textStyle="italic" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="5dp"
                android:background="@color/colorPrimaryDark"/>

            <LinearLayout
                android:paddingBottom="10dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/categorie"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Catgorie"
                    android:textSize="10dp"/>

                <TextView
                    android:id="@+id/description"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Lorem_short"
                    android:textSize="12dp"/>
                <TextView
                    android:id="@+id/time"
                    android:textColor="@color/colorAccent"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A l'instant"
                    android:textSize="11dp"/>
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
