<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="150dp"></LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="0.1dp"
        android:layout_margin="10dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:padding="10dp">

            <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top">

                <LinearLayout
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/like"
                        android:layout_weight="1"
                        android:background="@color/dark8"
                        android:padding="10dp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:drawableLeft="@drawable/ic_hearth_white"
                        android:textSize="15dp"/>
                    <TextView
                        android:id="@+id/share"
                        android:layout_weight="1"
                        android:background="@color/dark6"
                        android:padding="10dp"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:drawableLeft="@drawable/ic_share_white"
                        android:textSize="15dp"/>
                    <TextView
                        android:id="@+id/comment"
                        android:layout_weight="1"
                        android:background="@color/dark3"
                        android:padding="10dp"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:drawableLeft="@drawable/ic_comment_white"
                        android:textSize="15dp"/>

                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <cd.maichapayteam.zuajob.Tools.RoundedImageView
                        android:id="@+id/avatar"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/avatar"
                        android:elevation="1dp"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:padding="10dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/nom"
                                android:textColor="@color/black"
                                android:textSize="16dp"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Nom du Job"/>
                            <TextView
                                android:textColor="@color/colorAccent"
                                android:id="@+id/number"
                                android:textSize="15dp"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Nom du Jobeur"/>


                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:background="#C9C9C9"
                android:elevation="1dp"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"/>

            <RatingBar
                android:visibility="gone"
                android:clickable="false"
                android:focusableInTouchMode="false"
                android:focusable="false"
                android:isIndicator="true"
                android:layout_marginTop="5dp"
                android:rating="4.5"
                android:layout_gravity="center"
                android:id="@+id/MyRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/categorie"
                android:textStyle="bold"
                android:textSize="16dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DÃ©scription de l'utilisateur"/>
            <TextView
                android:textStyle="bold"
                android:fontFamily="@font/alegreya_sans_thin"
                android:id="@+id/S_descriptions"
                android:layout_weight="1"
                android:textSize="14dp"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aucune description"/>

            <LinearLayout
                android:visibility="gone"
                android:layout_marginTop="25dp"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:background="@color/dark8"
                    android:padding="10dp"
                    android:text="Prix du services"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="13dp"/>
                <TextView
                    android:id="@+id/S_prix"
                    android:layout_weight="1"
                    android:background="@color/dark3"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:text="50 USD"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="15dp"/>

            </LinearLayout>

            <LinearLayout
                android:background="#C9C9C9"
                android:elevation="0.1dp"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"/>


        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
