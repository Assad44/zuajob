<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:paddingBottom="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:padding="15dp"
                android:gravity="start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rendez vous "
                android:background="@color/colorAccent"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_marginBottom="15dp" />

            <LinearLayout
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/date_zone"
                    android:background="@drawable/corner_gray_corner_blanc"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">

                    <ImageView
                        android:padding="15dp"
                        android:src="@android:drawable/ic_menu_my_calendar"
                        android:background="@color/colorAccent"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:layout_marginRight="10dp"
                        android:background="@color/white"
                        android:singleLine="true"
                        android:fontFamily="@font/alegreya_sans_thin"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:id="@+id/date"
                        android:padding="15dp"
                        android:textSize="17dp"
                        android:enabled="false"
                        android:hint="Date du rendez-vous"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/heure_zone"
                    android:background="@drawable/corner_gray_corner_blanc"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">

                    <ImageView
                        android:padding="15dp"
                        android:src="@android:drawable/ic_menu_my_calendar"
                        android:background="@color/colorAccent"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:background="@color/white"
                        android:singleLine="true"
                        android:fontFamily="@font/alegreya_sans_thin"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:id="@+id/heure"
                        android:padding="15dp"
                        android:layout_marginRight="10dp"
                        android:textSize="17dp"
                        android:enabled="false"
                        android:hint="Heure du rendez-vous"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">

                    <EditText
                        android:id="@+id/note"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/alegreya_sans_thin"
                        android:gravity="top"
                        android:hint="Note"
                        android:paddingLeft="15dp"
                        android:singleLine="false"
                        android:textColor="@color/black"
                        android:textSize="17dp"
                        android:textStyle="bold" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>
