<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/element"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="15dp"
        android:layout_margin="10dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:padding="10dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:padding="10dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/S_categorie"
                            android:textColor="@color/black"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Titre du Job"/>
                        <TextView
                            android:id="@+id/SS_categorie"
                            android:maxLength="200"
                            android:textStyle="bold"
                            android:textSize="16dp"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="CatÃ©gorie : "/>
                        <TextView
                            android:maxLength="200"
                            android:textStyle="bold"
                            android:fontFamily="@font/alegreya_sans_thin"
                            android:id="@+id/S_descriptions"
                            android:textSize="14dp"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Nom du Jobeur"/>

                        <TextView
                            android:id="@+id/S_prix"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="50 000 000 fc"
                            android:textColor="@color/colorAccent"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>
            <LinearLayout
                android:background="#C9C9C9"
                android:elevation="4dp"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"/>

            <LinearLayout
                android:weightSum="3"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/ic_edit_blue"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:id="@+id/editer"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Editer"/>
                <TextView
                    android:padding="10dp"
                    android:background="@drawable/corner_primary_border_white"
                    android:drawablePadding="10dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:id="@+id/sollicitations"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sollicitants"/>
                <TextView
                    android:drawableRight="@drawable/ic_close_red"
                    android:textColor="@color/red"
                    android:id="@+id/retirer"
                    android:textStyle="bold"
                    android:drawablePadding="10dp"
                    android:gravity="end|center_vertical"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Retirer"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>