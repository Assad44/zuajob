<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp"
    android:id="@+id/element"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/white"
        android:elevation="10dp">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:visibility="visible"
                android:id="@+id/header"
                android:padding="5dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:scaleType="centerCrop"
                    android:id="@+id/avatar"
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:src="@drawable/avatar"/>

                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="50dp"
                    android:layout_height="1dp"
                    android:layout_marginBottom="1dp"
                    android:background="#66A8A8A8"/>

                <TextView
                    android:id="@+id/nom_user"
                    android:textColor="@color/dark8"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nom du jobeur"
                    android:textSize="15dp"/>
                <TextView
                    android:id="@+id/nom_number"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="814511083"
                    android:textSize="11dp"/>

                <TextView
                    android:layout_marginTop="10dp"
                    android:background="@drawable/corner_blue_border_white"
                    android:padding="10dp"
                    android:id="@+id/confier"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Confier"
                    android:textColor="@color/white"
                    android:textSize="11dp"
                    android:fontFamily="@font/alegreya_sans_thin"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>