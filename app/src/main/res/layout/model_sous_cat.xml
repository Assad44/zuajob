<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

  <android.support.v7.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="5dp"
      app:cardBackgroundColor="@color/white"
      android:elevation="15dp">

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

      <TextView
          android:padding="10dp"
          android:fontFamily="@font/alegreya_sans_thin"
          android:id="@+id/scat"
          android:textColor="@color/black"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Souscat"
          android:textSize="20dp"/>
      <LinearLayout
          android:layout_marginTop="10dp"
          android:id="@+id/block"
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <TextView
              android:background="@drawable/corner_blue_border_white"
              android:textColor="@color/white"
              android:id="@+id/open_annonces"
              android:padding="10dp"
              android:layout_width="150dp"
              android:gravity="center"
              android:layout_height="wrap_content"
              android:text="Voir les annonces"
              android:textSize="12dp"/>
          <TextView
            android:background="@drawable/corner_primary_border_white"
            android:textColor="@color/white"
            android:id="@+id/open_services"
            android:padding="10dp"
            android:layout_width="150dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="Voir les services"
            android:textSize="12dp"/>

      </LinearLayout>
    </LinearLayout>

  </android.support.v7.widget.CardView>

</LinearLayout>
