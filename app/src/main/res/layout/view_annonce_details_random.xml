<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="150dp"></LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="0.1dp"
        android:layout_margin="10dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:padding="10dp">

                <LinearLayout
                    android:layout_margin="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top">

                    <LinearLayout
                        android:visibility="gone"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/share"
                            android:layout_weight="1"
                            android:background="@color/dark6"
                            android:padding="10dp"
                            android:textColor="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:drawableLeft="@drawable/ic_share_white"
                            android:textSize="15dp"/>
                        <TextView
                            android:id="@+id/comment"
                            android:layout_weight="1"
                            android:background="@color/dark3"
                            android:padding="10dp"
                            android:textColor="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:drawableLeft="@drawable/ic_comment_white"
                            android:textSize="15dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <cd.maichapayteam.zuajob.Tools.RoundedImageView
                            android:id="@+id/avatar"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/avatar"
                            android:elevation="1dp"/>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:padding="10dp"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/nom_user"
                                    android:textColor="@color/black"
                                    android:textSize="15dp"
                                    android:textStyle="bold"
                                    android:gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Aucun jobeur n'a été habilité pour cette annonce "/>
                                <TextView
                                    android:id="@+id/number"
                                    android:textSize="12dp"
                                    android:gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Nom du Jobeur"/>


                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:background="#C9C9C9"
                    android:elevation="1dp"
                    android:layout_marginTop="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"/>

                <TextView
                    android:layout_marginTop="10dp"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Catégorie de l'annonces"/>

                <TextView
                    android:id="@+id/categore"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="Categorie>sous categorie"
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="17dp"/>
                <LinearLayout
                    android:background="#C9C9C9"
                    android:elevation="1dp"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"/>


                <TextView
                    android:layout_marginTop="10dp"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Description de l'annonces"/>

                <TextView
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:fontFamily="@font/alegreya_sans_thin"
                    android:id="@+id/description"
                    android:layout_weight="1"
                    android:textSize="14dp"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Lorems"/>

                <TextView
                    android:textStyle="bold"
                    android:fontFamily="@font/alegreya_sans_thin"
                    android:id="@+id/time"
                    android:textColor="@color/colorAccent"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A l'instant"/>

                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:weightSum="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/S_prix"
                        android:layout_weight="1"
                        android:background="@color/dark8"
                        android:padding="10dp"
                        android:textStyle="bold"
                        android:text="Prix du service"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textSize="12dp"/>
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/postullants"
                        android:layout_weight="1"
                        android:background="@color/colorAccent"
                        android:padding="10dp"
                        android:textStyle="bold"
                        android:text="Postulants"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textSize="12dp"/>
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/delete"
                        android:layout_weight="1"
                        android:background="@color/red"
                        android:padding="10dp"
                        android:textStyle="bold"
                        android:text="Retirer"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textSize="12dp"/>

                </LinearLayout>

                <LinearLayout
                    android:background="#C9C9C9"
                    android:elevation="0.1dp"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"/>


            </LinearLayout>

        </ScrollView>

    </android.support.v7.widget.CardView>

</RelativeLayout>
